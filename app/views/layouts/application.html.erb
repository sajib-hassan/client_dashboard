<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbolinks-track": "reload" %>
</head>

<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
  <%= link_to "Dashboard", root_path, class: "navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar_supported_content" aria-controls="navbar_supported_content" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbar_supported_content">
    <ul class="navbar-nav mr-auto" style="float: right">
      <li class="nav-item"><%= link_to "Companies", companies_path, class: "nav-link" %></li>
      <li class="nav-item"><%= link_to "Employees", employees_path, class: "nav-link" %></li>
      <li class="nav-item"><%= link_to "Partner Companies", partner_companies_path, class: "nav-link" %></li>
      <li class="nav-item"><%= link_to "Contractors", contractors_path, class: "nav-link" %></li>
      <li class="nav-item"><%= link_to "Clients", clients_path, class: "nav-link" %></li>
    </ul>
  </div>
</nav>

<% flash.each do |key, value| %>
  <div class="<%= flash_class(key.to_sym) %>">
    <%= value %>
  </div>
<% end %>

<%= yield %>
</body>
</html>
