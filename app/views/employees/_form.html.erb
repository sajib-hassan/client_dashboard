<%= form_with(model: employee, local: true) do |form| %>
  <% if employee.errors.any? %>
    <div class="alert alert-danger mt-3">
      <h5><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h5>

      <ul class="mb-0">
        <% employee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="field">
      <%= form.label :first_name, class: "control-label" %>
      <%= form.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= form.label :last_name, class: "control-label" %>
      <%= form.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= form.label :company_id, class: "control-label" %>
      <%= form.collection_select :company_id, Company.all, :id, :name, {}, class: "form-control" %>
    </div>
  </div>

  <%= form.submit class: "btn btn-success" %>
  <%= link_to "Back", back_path, class: "btn btn-danger" %>
<% end %>
