<div class="container mt-4">
  <div class="row">
    <div class="col-sm">
      <h1>Contractors</h1>
    </div>
    <div class="col-sm">
      <%= link_to "New Contractor", new_contractor_path, class: "btn btn-primary float-right" %>
    </div>
  </div>

  <table class="table table-hover mt-4">
    <thead class="thead-light">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Partner Company Identifier</th>
        <th>Clients</th>
        <th>Clients without Employees</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contractors.each do |contractor| %>
        <tr>
          <td><%= contractor.first_name %></td>
          <td><%= contractor.last_name %></td>
          <td><%= contractor.partner_company.identity %></td>
          <td><ul><% contractor.partner_company.clients.each do |client| %>
           <li><%= link_to client.full_name, client_path(client) %></li>
          <% end %>
          </ul></td>
          <td><ul><% contractor.clients_without_employees.each do |client| %>
           <li><%= link_to client.full_name, client_path(client) %></li>
          <% end %>
          </ul></td>
          <td><%= link_to 'Show', contractor %></td>
          <td><%= link_to 'Edit', edit_contractor_path(contractor) %></td>
          <td><%= link_to 'Destroy', contractor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
